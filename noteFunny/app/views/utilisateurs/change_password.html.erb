<div class="actions">
<%= form_tag(submitNewPassword_path) do %>
	<p><label for="utilisateur_password">Mot de passe actuel: </label>
	<%= password_field_tag(:old_password) %></p>
	<p><label for="utilisateur_password_new">Nouveau mot de passe: </label>
	<%= password_field_tag(:new_password) %></p>
	<p><label for="utilisateur_password_new_confirm">Confirmer le nouveau mot de passe: </label>
	<%= password_field_tag(:new_password_confirmation) %></p>
	<%= submit_tag 'Valider' %>
<% end %>
</div>