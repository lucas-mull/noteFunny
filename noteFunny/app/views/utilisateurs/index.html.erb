<p id="notice"><%= notice %></p>

<h1>Connexion</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= form_for :user do |f| %>
      <div class="actions">
      <p><label for="utilisateur_email">Adresse email: </label>
      <%= email_field 'utilisateur', 'email' %></p>
      <p><label for="utilisateur_password">Mot de passe: </label>
      <%= password_field 'utilisateur', 'password' %></p>
      <%= f.submit 'Connexion' %>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'S\'inscrire', new_utilisateur_path %>
